doctype html

html
  head
    title Bug Chess!
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-theme.css')
    link(rel='stylesheet', href='/stylesheets/all.css')
    link(rel='stylesheet', href='/stylesheets/board-style.css')
    block scripts

  body
    nav.navbar.navbar-default
      div.container-fluid
        div.navbar-header
          a.navbar-brand(href='/')
            img(height='20px' src='/images/logos/bugchess.png')
        div
          ul.nav.navbar-nav
            if user
            
              if route === 'home'
                li.active
                  a(href='/') Home
              else
                li
                  a(href='/') Home
                
              if route === 'account'
                li.active
                  a(href='/account') Account
              else
                li
                  a(href='/account') Account
              
              if route === 'logout'
                li.active
                  a(href='/logout') Log Out
              else
                li
                  a(href='/logout') Log Out
            else
            
              if route === 'login'
                li.active
                  a(href='/login') Log In
              else
                li
                  a(href='/login') Log In
              
              if route === 'register'
                li.active
                  a(href='/register') Register
              else
                li
                  a(href='/register') Register

    block content
